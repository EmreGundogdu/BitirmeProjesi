@model List<Category>

<div class="list-group">
    <a href="/products/list" class="list-group-item list-group-item-action">Tüm Kategoriler</a>
    @foreach (var category in Model)
    {
        <a asp-action="List" asp-controller="Products" asp-route-id="@category.CategoryId" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == category.CategoryId.ToString()? "active":"")">@category.Name</a>
    }
</div>   